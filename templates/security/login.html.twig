{% extends 'base.html.twig' %}

{% block body %}

    <div
        class="container">

        <!-- Content here -->
        <section class="p-4">

            <h1>Connexion</h1>
            <img class="rounded-left" src="/img/logo/logo.jpg" alt="" width="100" height="100">


            <div class="col-sm-10 align-self-center">

                <form action=" {{ path('security_login') }} " method="POST">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" placeholder="Adresse mail" required name="_username" autofocus="">
                        <small class="form-text text-muted">{% trans %}Nous ne partagerons jamais votre email avec qui que ce soit.{% endtrans %}</small>

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Mot de passe</label>
                        <input type="password" class="form-control" placeholder="Mot de passe" required name="_password">
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
                </form>
            </div>
        </section>
    </div>

{% endblock %}
