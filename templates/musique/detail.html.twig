{% extends 'base.html.twig' %}

{% block body %}


<dir class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="card text-center">
        <div class="card-header">
          {% trans %}Auteur{% endtrans %} : #Users
        </div>
        <div class="card-body">
          <h5 class="card-title">{% trans %}Titre {% endtrans %} : {{ musique.title }}</h5>
          <p class="card-text">{% trans %}Code{% endtrans %}</p>
          <p id="codeCp" class="card-text"> {{ musique.code }}</p>
          <button type="button" onclick="copyToClipboard('#codeCp')" class="btn btn-outline-dark">Copy</button>
        </div>
        <div class="card-footer text-muted">
          {{ musique.created | date('d/m/Y') }}
        </div>
      </div>
    </div>
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">{% trans %}Description{% endtrans %} : </li>
          <li class="list-group-item">{{ musique.description }}</li>
          <li class="list-group-item">{% trans %}Difficult√©{% endtrans %} : {{ musique.difficulty }}</li>
        </ul>
      </div>
    </div>
  </div>
</dir>

{% endblock %}